<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getInfoButton"
        android:text="GET INFO"/>

    <TextView
        android:id="@+id/gottenInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/getInfoButton"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="36px"

        android:text="TEST"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/getCallLogsButton"
        android:text="GET CALLLOGS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/getCallLogsButton"
        android:layout_alignParentStart="true"
        android:id="@+id/deleteCallLogsButton"
        android:text="DEL CALLLOGS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/getSmsButton"
        android:text="GET SMS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/getSmsButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/delSmsButton"
        android:text="DEL SMS"/>

    <Button
        android:id="@+id/uploadJsonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/getCallLogsButton"
        android:text="POST JSON" />

</RelativeLayout>
